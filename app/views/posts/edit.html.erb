<div class="container" style="max-width: 600px;">
  <%= form_with model: @post, local: true, data: { turbo: false } do |form| %>
    <div class="mb-3">
      <%= form.label :title, "タイトル", class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :content, "内容", class: "form-label" %>
      <%= form.text_area :content, class: "form-control", rows: 5 %>
    </div>
    <div class="mb-3">
      <%= form.submit "更新する", class: "btn btn-primary" %>
      <%= link_to '投稿一覧に戻る', posts_path, class: "btn btn-secondary ms-2" %>
    </div>
  <% end %>
</div>
