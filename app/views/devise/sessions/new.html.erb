<div class="container mt-5">
  <h2 class="text-center mb-4">Log in</h2>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-group" }) do |f| %>
        <!-- resourceはDeviseで自動的に提供される変数 resource_nameはDevise が提供するヘルパーメソッドで、対象となるモデルの名前を表します。-->
        <!-- Email Field -->
        <div class="mb-3">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
        </div>

        <!-- Password Field -->
        <div class="mb-3">
          <%= f.label :password, "Password", class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
        </div>

        <!-- Remember Me Checkbox -->
        <% if devise_mapping.rememberable? %> <!-- devise_mapping 現在のリクエストで使用されているDeviseモデルの設定や情報を取得するためのオブジェクト -->
        <!-- rememberable ログイン状態を保持する（Remember Me）」機能を提供するモジュール -->
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, "Remember me", class: "form-check-label" %>
          </div>
        <% end %>

        <!-- Submit Button -->
        <div class="d-grid mb-3">
          <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>

      <!-- Links (e.g., Forgot your password?) -->
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>